<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dangtho.com.mymp3.view.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/rltList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rltTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="#0048ff"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="MY MUSIC"
                android:textColor="#FFF"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lvMp3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lnl"
            android:layout_below="@id/rltTitle" />
        <include
            layout="@layout/activity_main_player"
            android:layout_above="@+id/lnl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lnl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentBottom="true"
            android:background="#ae0048ff"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_weight="4"
                android:id="@+id/lnlo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="name song"
                    android:textColor="#FFF"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/nameSinger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name song"
                    android:textColor="#FFF"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgPrivious"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_privous" />

                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_play" />

                <ImageView
                    android:id="@+id/imgNext"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_next" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
